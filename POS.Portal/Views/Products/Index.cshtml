<h3>{{title.split("-")[0]}}</h3>
<hr />
<a class="btn btn-primary" ng-click="new()">@Common.New &nbsp; <b class="glyphicon glyphicon-plus"></b></a>
<br /><br />
<table class="table table-bordered table-condensed">
    <tr>
        <th>@Common.Name</th>
        <th></th>
    </tr>
    <tbody>
        <tr ng-animate="'animate'" ng-repeat="product in list" ng-init="editable=entity.Id === 0" class="editable">
            <td>{{product.Category.Name}}</td>
            <td>{{product.Barcode}}</td>
            <td>{{product.Name}}</td>
            <td>{{product.SalePrice}}</td>
            <td>{{product.Unit.Name}}</td>
            <td>
                <div class="btn-group" ng-hide="editable">
                    <a class="btn btn-xs btn-info" ng-click="edit()">@Common.Edit &nbsp;<b class="glyphicon glyphicon-edit"></b></a>
                    <a class="btn btn-xs btn-danger" ng-click="delete()">@Common.Delete &nbsp;<b class="glyphicon glyphicon-remove"></b></a>
                </div>
                <div class="btn-group" ng-show="editable">
                    <a class="btn btn-xs btn-success" ng-click="save()">@Common.Save &nbsp;<b class="glyphicon glyphicon-ok"></b></a>
                    <a class="btn btn-xs btn-warning" ng-click="cancel()">@Common.Cancel &nbsp;<b class="glyphicon glyphicon-remove"></b></a>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<div class="modal fade" role="dialog" id="productModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="ModalLabel">{{modelTitle}}</h4>
            </div>
            <div class="modal-body">
                <form novalidate="" name="productForm" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-2">
                            <label class="control-label">@Common.Name</label>
                        </div>
                        <div class="col-sm-8">
                            <input class="form-control" ng-model="product.Name" name="Name" required />

                            <span class="ng-invalid" ng-show="(productForm.Name.$dirty || productForm.$submitted ) &&  productForm.Name.$error.required">
                                @string.Format(Common.Required, Common.Name)
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">@Common.Close</button>
            </div>
        </div>
    </div>

</div>
